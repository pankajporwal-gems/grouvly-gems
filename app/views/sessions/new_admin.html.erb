<div class="container mt-20">
  <div class="row justify-content-center">
    <div class="col-lg-12"> <!-- Adjust the column width as needed -->
      <div class="block-form">
        <%= form_for(:user, url: admin_login_path, method: :post, html: { class: 'form-horizontal' }) do |f| %>
          <div class="form-group">
            <div class="col-sm-12 text-center">
              <%= f.label 'Email' %>
              <%= f.email_field :email, autofocus: true, class: 'form-control input-lg text-center', style: 'width: 450px; margin: 0 auto;' %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-12 text-center">
              <%= f.label 'Password' %>
              <%= f.password_field :password, class: 'form-control input-lg text-center', style: 'width: 450px; margin: 0 auto;' %>
            </div>
          </div>
          <div class="form-group text-center mt-3">
            <div class="col-sm-12 mt-3">
              <%= f.submit 'Sign In', class: 'btn btn-primary btn-lg', id: 'signin-button' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>